<section class="section">
	<div class="container">
		<div class="columns">
		<div class=column></div>
			<div class="column is-two-thirds">
				<div class="card">
					<div class="card-content">
						<div class="content">
							<%= form_for @client, :local => true do |f| %>
						<div class="field">
							<%= f.label(:name, "Name") %>
							<div class="control">
								<%= f.text_field :name, class: "input", placeholder: "Name" %>
							</div>
						</div>
							<div class="field">
							<%= f.label(:number, "Contact Number") %>
							<div class="control">
								<%= f.text_field :number, class: "input", placeholder: "Contact Number" %>
							</div>
						</div>
						<div class="field">
							<%= f.submit 'Register', :type => "submit", class: "btn btn-danger" %>
						</div>
					<% end %>
						</div>
					</div>
				</div>
			</div>
		<div class=column></div>		
		</div>	
	</div>	
</section>	