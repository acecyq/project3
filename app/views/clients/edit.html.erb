<div class="container">
   <h3> <%="Client details for #{@user.email}" %> </h3>

    <%= form_for @client, :local => true do |f| %>

        <div class="form-group">
			<%= f.label(:name, "Name") %>
			<%= f.text_field :name, class: "form-control" %>
		</div>

        <div class="form-group">
			<%= f.label(:number, "Contact Number") %>
			<%= f.text_field :number, class: "form-control" %>
		</div>
        
        <div class="form-group">
			<%= f.submit 'Update', :type => "submit", class: "btn btn-danger" %>
		</div>

    <% end %>

</div>