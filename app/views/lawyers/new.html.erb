<%= form_for @lawyer, :local => true do |f| %>
    
    <div class="form-group">
		<%= f.label(:name, "Name") %>
		<%= f.text_field :name, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label(:email, "Email") %>
		<%= f.text_field :email, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label(:number, "Contact Number") %>
		<%= f.text_field :number, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label(:specialization, "Specialization") %>
		<%= f.text_field :specialization, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label(:b_year, "Birth Year") %>
		<%= f.text_field :b_year, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label(:ppg, "PPG") %>
		<%= f.text_field :ppg, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label(:rpg, "RPG") %>
		<%= f.text_field :rpg, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label(:apg, "APG") %>
		<%= f.text_field :apg, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label(:bpg, "BPG") %>
		<%= f.text_field :bpg, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label(:user_ids, "User") %>
		<%= f.collection_check_boxes :user_ids, @user, :id, :name, class: "form-check-input" %>
	</div>

	<div class="form-group">
		<button type="submit" class="btn btn-danger">Register</button>
	</div>
<% end %>