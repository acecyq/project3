

<h2> Case Update </h2>

<%= form_for @case, :local => true do |f| %>
    
    <div class="form-group">
		<%= f.label(:title, "Title") %>
		<%= f.text_field :title, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label(:specialization, "Specialization") %>
			<%= f.select(:specialization) do %>
				<% @specialization.each do |s| -%>
				<%= content_tag(:option, s.name, value: s.name) %>
			<% end %>
		<% end %>
	</div>

	<div class="form-group">
		<%= f.label(:description, "Case Details") %>
		<%= f.text_area(:description, size: "24x6") %>
	</div>

	<div class="form-group">
			<%= f.submit 'Update', :type => "submit", class: "btn btn-danger" %>
	</div>

    <div class="form-group">
			<%= link_to 'Destroy', case_path(@case),
			method: :delete,
			data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
	</div>

<% end %>