<section class="section Site-content">
	<div class="container">
		<div class="columns">
			<div class=column></div>
				<div class="column is-two-thirds">
					<div class="card">
						<div class="card-content">
							<div class="content">
								  <section class="hero is-dark">
									<div class="hero-body">
									<div class="container">
										<div class="columns is-vcentered">
										<div class="column">
											<h1 class="title is-size-2" style="color: hsl(27, 76%, 53%)">Case Update</h1>
											<h3 class="subtitle is-size-4">I need LawMe</h3>
										</div>
										</div>
									</div>
									</div>
									</section>
								<br />
								<%= form_for @case, :local => true do |f| %>
								
								<div class="field">
									<%= f.label(:title, "Title") %>
									<%= f.text_field :title, class: "input" %>
								</div>

								<div class="field">
									<%= f.label(:specialization, "Specialization") %>
										<%= f.select(:specialization) do %>
											<% @specialization.each do |s| -%>
											<%= content_tag(:option, s.name, value: s.name) %>
										<% end %>
									<% end %>
								</div>

								<div class="field">
									<%= f.label(:description, "Case Details") %>
									<%= f.text_area(:description, class: "input") %>
								</div>

								<div class="field">
										<%= f.submit 'Update', :type => "submit", class: "button is-warning-ish" %>
								</div>

								<div class="field ">
										<%= link_to 'Destroy', case_path(@case),
										method: :delete,
										data: { confirm: 'Are you sure?' }, class: "button is-danger-ish" %>
								</div>

								<% end %>
							</div>
						</div>
					</div>
				</div>
			<div class=column></div>		
		</div>	
	</div>	
</section>	