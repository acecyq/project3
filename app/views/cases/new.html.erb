<h2> New Case </h2>

<%= form_for @case, :local => true do |f| %>
    
    <div class="form-group">
		<%= f.label(:title, "Title") %>
		<%= f.text_field :title, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label(:specialization, "Specialization") %>
			<%= f.select(:specialization) do %>
				<% @specialization.each do |s| -%>
				<%= content_tag(:option, s.last, value: s.last) %>
			<% end %>
		<% end %>
	</div>

	<div class="form-group">
		<%= f.label(:description, "Case Details") %>
		<%= f.text_area(:description, size: "24x6") %>
	</div>

	<div class="form-group">
		<%= f.label(:client_id, "Your ID") %>
		<%= f.text_field :client_id, class: "form-control" %>
	</div>

	<div class="form-group">
		<button type="submit" class="btn btn-danger">Create Case</button>
	</div>
<% end %>