<h2> New Case </h2>

<%= form_for @case, url:client_cases_path, :local => true do |f| %>
    
    <div class="form-group">
		<%= f.label(:title, "Title") %>
		<%= f.text_field :title, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label(:specialization, "Specialization") %>
			<%= f.select(:specialization) do %>
				<% [['Accident', 'Accident'], ['Arbitration', 'Arbitration'], ['Banking and Finance', 'Banking and Finance'], ['Bribery and Anti-Corruption', 'Bribery and Anti-Corruption'], ['Business Crime and Fraud', 'Business Crime and Fraud']].each do |s| -%>
				<%= content_tag(:option, s.first, value: s.last) %>
			<% end %>
		<% end %>
	</div>

	<div class="form-group">
		<%= f.label(:description, "Case Details") %>
		<%= f.text_area(:description, size: "24x6") %>
	</div>

	<div class="form-group">
		<button type="submit" class="btn btn-danger">Create Case</button>
	</div>
<% end %>